@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Home Page";

    var name = Context.Session.GetString("Name");
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link href="~/css/home.css" rel="stylesheet">
<div class="text-center">
    <h1 class="display-4">Welcome, @name!</h1>
    <div id="EnterNotes">
        <form action="/Home/Save" method="post">
            <label for="NoteContext">Take a note here:</label>
            <textarea class="" id="NoteContext" name="NoteContext" rows="15" cols="105"></textarea>
            <button class="btn-primary" type="submit">Save</button>
        </form>
    </div>
    <div class="view" id="ViewNotes">
        @{
            if (Model != null)
            {
                foreach (var Note in Model)
                {
                    <div class="notepiece">
                        <textarea rows="10" cols="35" contenteditable="false" readonly="readonly">@Note.NoteContext</textarea>
                        <form action="@Url.Action("Delete", new { id = @Note.NoteId })" method="delete">
                            <button class="btn-danger" type="submit">Delete</button>
                        </form>
                    </div>
                }
            }
        }
    </div>

</div>